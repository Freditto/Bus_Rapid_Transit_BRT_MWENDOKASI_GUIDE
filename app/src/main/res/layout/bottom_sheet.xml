            />
    </RelativeLayout>






    <RelativeLayout
        android:id="@+id/route_gerezani_muhimbili"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/bgten"

        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="@color/material_white"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>






</LinearLayout>

    </HorizontalScrollView>

        <RelativeLayout
            android:id="@+id/navigationrouteView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/busView"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="6dp"

            >

            <TextView
                android:id="@+id/titleExplore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore"
                android:textColor="@color/colorText"
                android:textSize="25dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/titlesubexplore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Route Map"
                android:textSize="14dp"
                android:textColor="@color/colorText"
                android:layout_below="@id/titleExplore"
                />



        </RelativeLayout>




    <RelativeLayout
        android:id="@+id/busView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >

        <ImageView
            android:id="@+id/busImagetitle"
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:src="@drawable/buscut"
            android:layout_alignParentBottom="true"
            />



    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/scroll"
        android:layout_marginTop="16dp">



        <TextView
            android:id="@+id/route_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp"
            android:layout_toLeftOf="@id/buscenterd"
            android:textColor="@color/colorText"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/route_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_toLeftOf="@id/buscenterd"
            android:layout_below="@id/route_notify"
            />


        <ImageView
            android:id="@+id/buscenterd"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/frontbusview"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"/>


        <TextView
            android:id="@+id/route_notifyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp"
            android:textColor="@color/colorText"
            android:textStyle="bold"
            android:layout_toRightOf="@id/buscenterd"
            android:layout_marginLeft="10dp"
            />


        <TextView
            android:id="@+id/route_stationtwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_below="@id/route_notify"
            android:layout_toRightOf="@id/buscenterd"
            android:layout_marginLeft="10dp"
            />
    </RelativeLayout>


</RelativeLayout>


